-//user.twitter.iconURL
-//loggedIn

doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    block head
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
    link(href="/public/main.css" rel="stylesheet" type="text/css")
  body
    nav(class="navbar navbar-expand-md navbar-dark")
      a(class="navbar-brand" href="/") Nightline
      if loggedIn
        button(class="navbar-toggler" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
          span.span.navbar-toggler-icon

        div(class="collapse navbar-collapse" id="navbarSupportedContent")
          ul(class="navbar-nav mr-auto")
            li(class="nav-item")
              a(class="nav-link" href="/profile") My Plans
            li(class="nav-item")
              a(class="nav-link" href="/logout") Logout
            .dropdown-divider
          form(action="/search" method="GET" class="form-inline my-2 my-lg-0")
            input(class="form-control mr-sm-2" name="location" type="search" placeholder="City, State or Zip Code" aria-label="Search")
            button(class="btn btn-primary my-2 my-sm-0" type="submit") Search
            
    block body
      if error
          .alert.alert-danger.alert-dismissible.fade.show(role= "alert")
            button(type="button" class="close" data-dismiss="alert" aria-label="Close")
              span(aria-hidden="true") &times;
            =error
    
    .footer
      span Powered by Yelp
      a(href="https://www.yelp.com")
        img(src="https://cdn.glitch.com/f91ba5df-6bb6-465d-b8ac-de2dd837b265%2FYelp_trademark_RGB.png?1522859535736")
    script(src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous")
    script(src="/common/ajax-functions.js" type="text/javascript")
    block script